<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Are you sure that you want to delete the tag?"} %>

    </li>
  <% end %>
</ul>

<%= link_to "Create a New Tag", new_tag_path, class: "new_tag" %>
